{
  "name": "fashion-hub-test",
  "version": "1.0.0",
  "description": "End-to-end testing for Fashion Hub application",
  "main": "index.js",
  "scripts": {
    "ui:desktop": "TEST_ENV=${ENV:=local} playwright test --project=chromium --project=firefox",
    "ui:devices": "TEST_ENV=${ENV:=local} playwright test --project='Mobile Chrome' --project='iPad Pro'",

    "ui:headed": "playwright test --headed --project=chromium --workers=1 --trace on",
    "console:run": "playwright test tests/fashion-console.spec.ts --project=chromium --headed",
    "links:run": "playwright test tests/fashion-href.spec.ts --project=chromium --headed",
    "pulls:run": "playwright test tests/fashion-pull.spec.ts --project=chromium --headed",

    "gen:report": "allure serve allure-results",
    "audit": "tsc --noEmit"
  },
  "author": "Shiwantha Lakmal",
  "license": "ISC",
  "homepage": "https://github.com/shiwantha-lakmal/fashion-hub-test#readme",
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@types/node": "^24.6.0",
    "allure-playwright": "^2.12.0",
    "allure-commandline": "^2.27.0"
  }
}